@page
@model Bulky_RazorTemp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus"></i> Create New Category 
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
         <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
         </thead>
         <tbody>
             @foreach(var obj in Model.CategoryList.OrderBy(i => i.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i>Edit
                            </a>
                            <a asp-controller="/Categories/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a> 
@*                              <form method="post" class="w-auto">
                                <button asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </button>
                            </form> *@

                        </div>

                    </td>

                </tr>
            }

         </tbody>
    </table>
</div>


